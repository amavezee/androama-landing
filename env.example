# ============================================
# ANDROAMA Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# API Configuration
# ============================================
# Backend API URL
# For production: https://api.yourdomain.com
# For development: http://localhost:8000
VITE_API_URL=https://api.yourdomain.com

# ============================================
# Google OAuth Client ID
# ============================================
# Same as GOOGLE_CLIENT_ID in backend/.env
# Get from: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# ============================================
# Beta Access (Optional)
# ============================================
# Beta gate password (if using beta access gate)
# This is also stored in the database and can be changed via admin panel
VITE_BETA_ACCESS_PASSWORD=androama2025beta

# ============================================
# Beta Gate Enabled
# ============================================
# Set to 'true' to enable password gate on website
# Set to 'false' to disable (for public access)
VITE_BETA_GATE_ENABLED=true

# ============================================
# Stripe Configuration (Test Mode)
# ============================================
# Stripe Publishable Key (Test Mode)
# Get from: https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

